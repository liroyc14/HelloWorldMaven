pipeline {
    agent any
    stages {
        stage('Build') { 
            withMaven(maven : 'maven3.3.9')
            steps {
                sh 'mvn -B -DskipTests clean package' 
            }
        }
        stage('Test') {
            steps {
                sh 'mvn test'
            }
            post {
                always {
                    junit 'target/surefire-reports/*.xml'
                }
            }
        }
    }
}