pipeline { 
    agent none 
    stages {
        stage('Build') { 
            agent {
                node {
                    label 'label1'
                    customWorkspace 'main/java/com/test/HelloWorldMaven'
                }
            }
            tools {
                maven 'maven3.3.9'
            }
            steps {
                sh "mvn clean compile"
            }
        }
        stage('Test'){ 
            agent {
                node {
                    label 'label2'
                    customWorkspace 'test/java/com/test/HelloWorldMaven'
                }
            } 
            tools {
                maven 'maven3.3.9'
            }
            steps {
                sh "mvn test"
            }
        }
    }
}